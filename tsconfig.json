{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "declarationDir": "dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "include": [
    "packages/*/src/**/*.ts",
    "config/*.js"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
